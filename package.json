{
  "name": "@hemfrid/sf-bulk-api",
  "version": "0.8.0",
  "description": "A client for the Salesforce bulk API V2",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/hemfrid/client-sf-bulk2"
  },
  "keywords": [
    "salesforce",
    "bulkAPI",
    "salesforce-api"
  ],
  "scripts": {
    "prebuild": "yarn clean",
    "clean": "rimraf coverage build tmp dist",
    "lint:types": "tslint -c tslint.json -p tsconfig.json --fix",

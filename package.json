  "author": "clemb8",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.7.9",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "engines": {
    "node": ">=16"
  }
